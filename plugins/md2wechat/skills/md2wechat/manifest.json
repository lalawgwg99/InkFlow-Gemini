{
  "name": "md2wechat",
  "version": "1.5.0",
  "description": "Convert Markdown articles to WeChat Official Account formatted HTML with styled CSS. Supports API mode for quick conversion and AI mode for beautiful themed layouts. NEW: Writer style assistant with customizable creator styles (default: Dan Koe). Use when user wants to write articles, convert markdown to WeChat format, or publish to WeChat Official Account.",
  "repository": "geekjourneyx/md2wechat-skill",
  "requires": {
    "tools": [
      {
        "name": "curl",
        "optional": true,
        "purpose": "Download binary on first run",
        "alternatives": ["wget"]
      }
    ],
    "apis": [
      {
        "name": "WeChat Official Account API",
        "optional": true,
        "purpose": "Upload articles to draft box",
        "setup_url": "https://developers.weixin.qq.com/platform"
      }
    ]
  },
  "binary": {
    "name": "md2wechat",
    "source": "github-releases",
    "base_url": "https://github.com/geekjourneyx/md2wechat-skill/releases"
  },
  "platforms": {
    "darwin-amd64": "md2wechat-darwin-amd64",
    "darwin-arm64": "md2wechat-darwin-arm64",
    "linux-amd64": "md2wechat-linux-amd64",
    "linux-arm64": "md2wechat-linux-arm64",
    "windows-amd64": "md2wechat-windows-amd64.exe"
  }
}
